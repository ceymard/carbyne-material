
@require 'common'

.carbm-button-content.raised .carbm-ink
	background-color: #fff

.carbm-ink-container
	width: 100%
	height: 100%
	top: 0
	left: 0
	overflow: hidden
	position: absolute
	pointer-events: none

.carbm-ink
	display: block
	position: absolute
	background-color: $primary
	opacity: 0.4
	border-radius: 100%
	transform: scale(0)
	pointer-events: none

	width: 50px
	height: 50px

	&.animate
		animation: carbm-ink-ripple 0.45s ease-out

@keyframes carbm-ink-ripple {
	/** scale the element to 250% */
	100% {
		opacity: 0
		transform: scale(4)
	}
}

@require 'common'

.carbm-toolbar
  box-sizing border-box
  display flex
  flex-direction row
  align-items center

  padding 0 8px
  height 64px
  display box

  background-color $primary
  color white
  font-weight 500

.carbm-toolbar > h3
  font-size 24px
  font-weight 500

.carbm-toolbar > .carbm-button
  margin 0 8px

  & > .carbm-button-content
    color white
